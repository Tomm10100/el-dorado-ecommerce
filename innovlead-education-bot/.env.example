# InnovLead Education Bot - Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# TELEGRAM BOT CONFIGURATION
# ============================================================================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Bot mode: polling (development) or webhook (production)
BOT_MODE=polling

# Webhook configuration (only needed for production)
WEBHOOK_URL=https://your-domain.com/webhook
WEBHOOK_PORT=8443

# ============================================================================
# AI PROVIDER CONFIGURATION
# ============================================================================
# Anthropic Claude API (recommended)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Alternative: OpenAI (uncomment if using OpenAI instead)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4-turbo-preview

# AI Provider Selection: 'anthropic' or 'openai'
AI_PROVIDER=anthropic

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# SQLite (default for MVP)
DATABASE_URL=sqlite:///innovlead_bot.db

# Alternative: PostgreSQL/Supabase (uncomment for production)
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# ============================================================================
# SECURITY & SESSION MANAGEMENT
# ============================================================================
# Generate a secure random key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_here

# Environment: development, staging, production
ENVIRONMENT=development

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/bot.log

# ============================================================================
# PIPEDA COMPLIANCE & DATA RETENTION
# ============================================================================
# Number of days to retain active user data
DATA_RETENTION_DAYS=365

# Anonymize inactive users after (days)
ANONYMIZE_AFTER_INACTIVE_DAYS=730

# Require explicit consent for data processing
REQUIRE_DATA_CONSENT=true

# ============================================================================
# N8N INTEGRATION (OPTIONAL)
# ============================================================================
# n8n webhook URL for automation workflows
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/innovlead
N8N_API_KEY=your_n8n_api_key_here

# ============================================================================
# CRA REPORTING CONFIGURATION
# ============================================================================
# Enable automatic CRA impact report generation
CRA_REPORTING_ENABLED=true

# Report generation frequency: daily, weekly, monthly, quarterly
CRA_REPORT_FREQUENCY=monthly

# Email for CRA report delivery
CRA_REPORT_EMAIL=reports@innovlead.org

# ============================================================================
# RATE LIMITING & ABUSE PREVENTION
# ============================================================================
# Maximum messages per user per hour
RATE_LIMIT_MESSAGES_PER_HOUR=30

# Maximum AI tutor queries per user per day
RATE_LIMIT_AI_QUERIES_PER_DAY=20

# ============================================================================
# LOCALIZATION
# ============================================================================
# Default language: en, es, fr
DEFAULT_LANGUAGE=en

# Supported languages (comma-separated)
SUPPORTED_LANGUAGES=en,es,fr

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# Enable AI tutor functionality
ENABLE_AI_TUTOR=true

# Enable quiz/assessment features
ENABLE_QUIZZES=true

# Enable certificate generation
ENABLE_CERTIFICATES=true

# Enable community features (forums, discussions)
ENABLE_COMMUNITY=false

# ============================================================================
# INNOVLEAD FOUNDATION CONFIGURATION
# ============================================================================
# Organization details for branding
ORG_NAME=InnovLead Foundation
ORG_WEBSITE=https://innovlead.org
ORG_EMAIL=education@innovlead.org
ORG_TELEGRAM_COMMUNITY=@InnovLeadCommunity

# Executive Director & Technical Chair
EXECUTIVE_DIRECTOR=Tommy Fernandez
TECHNICAL_CHAIR=William Melendez
